{
    "$schema": "https://schemastore.org/package.json",
    "name": "bean",
    "private": true,
    "engines": {
        "node": ">=22",
        "pnpm": "^10.2.1"
    },
    "packageManager": "pnpm@10.2.1+sha1.48adf39a4ab751eda7b73b99447d1f0b6d227e02",
    "scripts": {
        "prepare": "git config core.hooksPath .git-hooks || echo 'Not in a git repo'",
        "clean": "git clean -xdf node_modules",
        "clean:workspaces": "turbo clean",
        "dev": "turbo dev",
        "dev:server": "turbo -F server dev",
        "dev:web": "turbo -F web dev",
        "build": "turbo build",
        "check": "turbo run check --continue",
        "check:fix": "turbo run check --continue -- --write",
        "check:ws": "pnpm dlx sherif@latest",
        "ci": "turbo run ci --continue",
        "typecheck": "turbo run typecheck --continue",
        "postinstall": "pnpm check:ws",
        "db:studio": "turbo -F server db:studio",
        "db:push": "turbo -F server db:push",
        "db:generate": "turbo -F server db:generate",
        "db:migrate": "turbo -F server db:migrate",
        "rename": "bash ./rename.sh"
    },
    "devDependencies": {
        "@bean/biome-config": "workspace:*",
        "@biomejs/biome": "catalog:",
        "@turbo/gen": "^2.5.4",
        "turbo": "^2.5.4",
        "typescript": "catalog:"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@biomejs/biome",
            "@parcel/watcher",
            "core-js-pure",
            "esbuild",
            "sharp"
        ]
    }
}
