{
    "$schema": "https://schemastore.org/tsconfig.json",
    "extends": "./base.json",
    "compilerOptions": {
        /** Emit types for internal packages to speed up editor performance. */
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "noEmit": false,

        /**
         * Set rootDir to root of the package to persist file structure
         * regardless of whether there are included files in the root
         */
        "rootDir": "${configDir}",
        "outDir": "${configDir}/dist"
    }
}
