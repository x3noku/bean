{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "linter": {
        "rules": {
            "a11y": {
                "noLabelWithoutControl": {
                    "level": "warn",
                    "options": {
                        "inputComponents": ["Checkbox", "Radio", "Switch"]
                    }
                }
            },
            "nursery": {
                "noStaticElementInteractions": "error",
                "useSortedClasses": {
                    "level": "warn",
                    "options": {
                        "attributes": [
                            "class",
                            "className",
                            "class:list",
                            "classList",
                            "ngClass"
                        ],
                        "functions": ["cn", "cx", "clsx", "cva", "tw", "tw.*"]
                    }
                }
            },
            "suspicious": {
                "noArrayIndexKey": "off"
            }
        }
    }
}
