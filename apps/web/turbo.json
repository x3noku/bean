{
    "$schema": "https://turborepo.com/schema.json",
    "extends": ["//"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "next-env.d.ts"]
        },
        "dev": {
            "with": ["@bean/server#dev"],
            "persistent": true
        },
        "typecheck": {
            "dependsOn": ["@bean/server#build"]
        }
    }
}
