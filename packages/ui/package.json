{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@bean/ui",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "exports": {
        "./styles": "./src/styles/globals.scss",
        "./postcss.config": "./postcss.config.js",
        "./lib": {
            "types": "./dist/src/lib/index.ts",
            "default": "./src/lib/index.ts"
        },
        "./lib/*": {
            "types": "./dist/src/lib/*.ts",
            "default": "./src/lib/*.ts"
        },
        "./hooks/*": {
            "types": "./dist/src/hooks/*.ts",
            "default": "./src/hooks/*.ts"
        },
        "./*": {
            "types": "./dist/src/components/*/index.d.ts",
            "default": "./src/components/*/index.ts"
        }
    },
    "scripts": {
        "build": "tsc",
        "clean": "git clean -xdf .cache .turbo dist node_modules",
        "dev": "tsc",
        "check": "biome check .",
        "check:fix": "biome check . --write",
        "ci": "biome ci",
        "typecheck": "tsc --noEmit --emitDeclarationOnly false",
        "ui-add": "pnpm dlx shadcn@canary add"
    },
    "dependencies": {
        "@radix-ui/react-slot": "^1.2.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.511.0",
        "tailwind-merge": "^3.3.0"
    },
    "devDependencies": {
        "@bean/biome-config": "workspace:*",
        "@bean/tailwind-config": "workspace:^",
        "@bean/tsconfig": "workspace:*",
        "@biomejs/biome": "catalog:",
        "@types/react": "catalog:react19",
        "autoprefixer": "^10.4.21",
        "postcss": "^8.5.4",
        "react": "catalog:react19",
        "sass": "^1.89.1",
        "tailwindcss": "catalog:",
        "typescript": "catalog:"
    }
}
